datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Optional but recommended for Neon migrations:
  // directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  password     String
  phone        String?
  company      String?
  package      String
  vehicleLimit Int
  vehicles     Vehicle[]
  createdAt    DateTime  @default(now())
}

model Vehicle {
  id        String   @id @default(cuid())
  make      String
  model     String
  year      Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model Driver {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  employeeNumber  String?
  passwordHash    String?  // set after invite completion
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model DriverInvite {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  expiresAt  DateTime
  acceptedAt DateTime?
  createdAt  DateTime @default(now())

  @@index([email])
}